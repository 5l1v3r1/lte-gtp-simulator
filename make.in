WARNIG_FLAGS= -Wall -Wextra -Wextra -Wformat-nonliteral -Wcast-align \
         -Wpointer-arith -Wmissing-declarations -Winline -Wundef \
         -Wcast-qual -Wshadow -Wwrite-strings -Wno-unused-parameter

DEBUG_FLAG= -g3

CFLAGS= $(DEBUG_FLAG) $(WARNIG_FLAGS)

CC= g++

RM= rm -f

MAKE= make

